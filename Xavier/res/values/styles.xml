<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="XavierButton">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:paddingLeft">@dimen/button_side_padding</item>
        <item name="android:paddingTop">@dimen/button_top_bottom_padding</item>
        <item name="android:paddingRight">@dimen/button_side_padding</item>
        <item name="android:paddingBottom">@dimen/button_top_bottom_padding</item>
        <item name="android:background">@color/xavier_red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="XavierButtonReversed" parent="@style/XavierButton">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/xavier_red</item>
    </style>

</resources>
